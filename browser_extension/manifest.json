{
    "manifest_version": 3,
    "name": "ChessGuard",
    "version": "1.0.0",
    "description": "Analyze chess games for suspicious play patterns directly from Lichess and Chess.com",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://lichess.org/*",
        "https://www.chess.com/*",
        "http://localhost:8000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://lichess.org/*",
                "https://www.chess.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}